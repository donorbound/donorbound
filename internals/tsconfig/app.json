{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "app",
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "sourceMap": true,
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strict": false,
    "strictNullChecks": true
  },
  "include": ["src"],
  "exclude": ["dist", "test"]
}
